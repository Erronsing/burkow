//- This gets compiled to index.html under assets. Do not edit assets/index.html directly
doctype 5
html(lang="en", ng-app="application")
  head
    title= Burkow
    link(rel="stylesheet", href="css/app.css")
    meta(name="viewport", content="width=device-width", initial-scale="1.0")

    a(href="https://github.com/aleksanb/burkow")
      img.forkme(
        src="http://aral.github.com/fork-me-on-github-retina-ribbons/right-red@2x.png" 
        alt="Fork me on GitHub")
    
  body
    .container(ng-controller="DetailsController")
      .row
        .col-md-8.col-md-offset-4
          h1 Aleksander Vognild Burkow
      .row
        .col-md-8.col-md-offset-4
          img.headshot(src="me.jpg")
          .details 
            p(ng-repeat="detail in details") {{detail.value}}

    .container(ng-controller="AwesomeController")
      .row
        .col-md-8.col-md-offset-4
          h2 Awesome
      dl.inline
        .row(ng-repeat-start="awesome in awesomes") 
          dt.col-md-4
            {{awesome.when}}
          dd.col-md-8
            p {{awesome.what}}
            p {{awesome.descr}}
        div(ng-repeat-end)
        
    .container(ng-controller="JobsController")
      .row
        .col-md-8.col-md-offset-4
          h2 Experience
      dl.inline
        .row(ng-repeat-start="job in jobs") 
          dt.col-md-4
            | {{job.start}} - 
            | {{job.end}}
          dd.col-md-8
            p {{job.where}}
            p {{job.what}}
        div(ng-repeat-end)

    .container(ng-controller="EducationsController")
      .row
        .col-md-8.col-md-offset-4
          h2 Education
      dl.inline
        .row(ng-repeat-start="edu in educations")
          dt.col-md-4
            | {{edu.start}} - 
            | {{edu.end}}
          dd.col-md-8
            p {{edu.where}}
            p {{edu.what}}
        div(ng-repeat-end)

    script(src="javascripts/vendor.js")
    script(src="javascripts/app.js")
